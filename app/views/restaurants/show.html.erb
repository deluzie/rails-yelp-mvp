<br>
<div class="container">
  <h2><%= @restaurant.name %></h2>
  <h3><%= @restaurant.category %></h3>
  <p><%= @restaurant.address %></p>
  <%= link_to "Add Review", new_restaurant_review_path(@restaurant) %>
  <ul class="list-group">
    <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item">
    <%= review.rating %>/5
    <br>
    <%= review.content %>
    <% end %>
    </li>
  </ul>
</div>
